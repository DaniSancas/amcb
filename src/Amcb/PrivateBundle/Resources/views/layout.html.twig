{% extends "::base.html.twig" %}

{% block extra_metatags %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}

{% block default_stylesheets %}
    <link href="{{ asset('/bootstrap/css/bootstrap.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('/bootstrap/css/bootstrap-theme.css') }}" rel="stylesheet" media="screen">
    {% block stylesheets %}{% endblock %}
{% endblock %}
  
{% block default_javascripts %}
    <script src="{{ asset('/bundles/common/js/jquery-min.js') }}"></script>
    <script src="{{ asset('/bootstrap/js/bootstrap.js') }}"></script>
    {% block javascripts %}{% endblock %}
{% endblock %}

{% block title %}Bootstrap 101 Template{% endblock %}

{% block body %}

    {% if is_granted('ROLE_USUARIO') %}
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <span class="navbar-brand no-hover">AMCB - Área privada</span>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="{{ path('private_homepage') }}">Depósito</a></li>
                    <li><a href="{{ path('private_fichero_nuevo') }}">Subir fichero</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{ path('homepage') }}">Inicio</a></li>
                    <li><a href="{{ path('private_logout') }}">Cerrar sesión</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
    {% endif %}

    {% include 'PrivateBundle::flash.html.twig' %}

    <div class="container">

        {% block content %}{% endblock %}

    </div>
    
{% endblock %}
    
