{% extends "PrivateBundle::layout.html.twig" %}

{% block title %}Área privada{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/common/css/custom-bootstrap.css') }}" />
{% endblock %}

{% block content %}

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Depósito de ficheros</h3>
        </div>
        <div class="panel-body">
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('private_fichero_nuevo') }}" class="btn btn btn-default">+ Subir fichero</a>
            {%  endif %}

            {% if ficheros|length > 0 %}

            <div class="list-group margin-top no-margin-bottom">
                {% for fichero in ficheros %}
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">{{ fichero.titulo }}</h4>
                    <h5 class="list-group-item-heading"><span class="color-grey">Publicado por {{ fichero.usuario }} el {{ fichero.fechaCreacion|fechahora_larga() }}</span></h5>
                    {% if fichero.fechaCreacion != fichero.fechaModificacion %}
                        <h5 class="list-group-item-heading"><span class="color-grey">Última modificación el {{ fichero.fechaCreacion|fechahora_larga() }}</span></h5>
                    {% endif %}
                    <p class="list-group-item-text">{{ fichero.descripcion }}</p>
                </a>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </div>

{% endblock %}