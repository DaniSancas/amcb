{% extends "base.html.twig" %}

{% block stylesheets %}
  {# Cargamos automáticamente el CSS base y el de cada Controller #}
  <link rel="stylesheet" href="{{ asset('bundles/frontend/css/styles.css') }}" />
  <link rel="stylesheet" href="{{ asset('bundles/frontend/css/'~get_controller_name()~'.css') }}" />
{% endblock %}

{% block body %}
  
  {% block pre_body %}{% endblock %} {# Para colocar fragmentos de código necesarios al inicio de la etiqueta body #}

  <div id="body-wrapper">

    {% include 'FrontendBundle::header.html.twig' %}

    <div id="content-wrapper">

      {% include 'FrontendBundle:'~get_controller_name()~':_submenu.html.twig' ignore missing %}

      <div id="content-body">
        <div id="content">
          
          {% include 'FrontendBundle::flash.html.twig' %}

          {% block content %}{% endblock %}

        </div>

      </div>

    </div>

    {% include 'FrontendBundle::footer.html.twig' %}
  </div>

{% endblock %}
